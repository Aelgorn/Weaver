@using MatBlazor;
@inherits Base.Draggable<Weaver.Data.Models.DatePicker>;

<MatDatePicker Value="@Component.MappedValue"
               Label="@Component.Label"
               EnableTime="@Component.EnableTime"
               EnableSeconds="@Component.EnableTime"
               @onchange="OnValueChanged" />

@code {
    private Task OnValueChanged(ChangeEventArgs e)
    {
        Component.MappedValue = (DateTime)e.Value;
        return ComponentChanged.InvokeAsync(Component);
    }
}