@using MatBlazor;
@inherits Base.Draggable<Weaver.Data.Models.CheckBox>;

<MatCheckbox Disabled="!Edit" Value="@Component.MappedValue" Label="@Component.Label" @onchange="OnValueChanged" />

@code {
    private Task OnValueChanged(ChangeEventArgs e)
    {
        Component.MappedValue = (bool)e.Value;
        return ComponentChanged.InvokeAsync(Component);
    }
}