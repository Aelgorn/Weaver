@using MatBlazor;
@inherits Base.JComponent<Weaver.Data.Models.TextField>;

<MatTextField ReadOnly="!Edit" Value="@Component.MappedValue" Label="@Component.Label" FullWidth="true" @oninput="OnValueChanged" />

@code {
    private Task OnValueChanged(ChangeEventArgs e)
    {
        Component.MappedValue = (string)e.Value;
        return ComponentChanged.InvokeAsync(Component);
    }
}