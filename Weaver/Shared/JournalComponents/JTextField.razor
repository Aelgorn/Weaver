@using MatBlazor;
@inherits Base.Draggable<Weaver.Data.Models.TextField>;

<MatTextField @bind-Value="@Component.Value" @bind-Label="@Component.Label" FullWidth="true" />

@code {
    private Task OnValueChanged(ChangeEventArgs e)
    {
        Component.Value = (string)e.Value;
        return ComponentChanged.InvokeAsync(Component);
    }
}