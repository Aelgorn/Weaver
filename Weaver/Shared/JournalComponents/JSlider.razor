@using MatBlazor;
@inherits Base.Draggable<Weaver.Data.Models.Slider>;

<MatSlider Disabled="!Edit" Value="@Component.MappedValue"
           Label="@Component.Label"
           Step="@Component.Step"
           ValueMin="@Component.Min"
           ValueMax="@Component.Max"
           @onchange="OnValueChanged" />


@code {
    private Task OnValueChanged(ChangeEventArgs e)
    {
        Component.MappedValue = (double)e.Value;
        return ComponentChanged.InvokeAsync(Component);
    }
}