@using MatBlazor;
@inherits Base.Draggable<Weaver.Data.Models.SelectField>;

<MatSelect Disabled="!Edit" Value="@Component.MappedValue" Label="@Component.Label" @onchange="OnValueChanged">
    @foreach (var item in Component.OptionsList)
    {
        <MatSelectItem Value="item">@item</MatSelectItem>
    }
</MatSelect>


@code {
    private Task OnValueChanged(ChangeEventArgs e)
    {
        Component.MappedValue = (string)e.Value;
        return ComponentChanged.InvokeAsync(Component);
    }
}S