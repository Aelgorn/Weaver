@using MatBlazor;
@inherits Base.JComponent<Weaver.Data.Models.TextArea>;

<MatTextField ReadOnly="!Edit" Value="@Component.MappedValue"
              Label="@Component.Label"
              FullWidth="@true"
              InputStyle="@style"
              TextArea="true"
              @oninput="OnValueChanged"
              />

@code {
    private Task OnValueChanged(ChangeEventArgs e)
    {
        Component.MappedValue = (string)e.Value;
        return ComponentChanged.InvokeAsync(Component);
    }

    private string style
    {
        get => $"height:{Component.Height}px;resize:none;";
    }
}
