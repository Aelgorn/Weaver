@using MatBlazor;
@inherits Base.Draggable<Weaver.Data.Models.RadioList>;

<MatList>
    @foreach (var btn in Component.Buttons)
    {
        <MatListItem>
            <JRadioButton Component="@btn" @onchange="e => BtnChanged(e, btn)" />
        </MatListItem>
    }
</MatList>

@code {
    private Task BtnChanged(ChangeEventArgs e, Weaver.Data.Models.RadioButton btn)
    {
        btn.MappedValue = (bool)e.Value;
        return ComponentChanged.InvokeAsync(Component);
    }
}